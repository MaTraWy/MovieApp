<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loled"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.matrawy.a7oda.Final_Project.MainActivity">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/content_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.matrawy.a7oda.stageone.com.matrawy.a7oda.Final_Project.Details_Main"
            tools:showIn="@layout/detail_main">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Green">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="View"
                    android:textColor="@color/White"
                    android:id="@+id/title"
                    android:textSize="25dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="5dp">

                </TextView>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/Detail_image"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:paddingTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:id="@+id/Year"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Time"
                        android:text="150 min"
                        android:paddingLeft="15dp"
                        android:gravity="center"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Score"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"/>
                    <Switch
                        android:text="Favourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:id="@+id/Favourite" />


                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/content_detail"
                android:paddingLeft="15dp"
                android:paddingRight="25dp"
                android:paddingBottom="15dp"
                android:paddingTop="50dp"
                android:textSize="15dp">

            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="Trailers:"
                android:textSize="30dp"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:fillViewport="true"
                android:paddingLeft="15dp"
                android:id="@+id/list_Trailers"/>
            <View
                android:layout_width="match_parent"
                android:paddingTop="350dp"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:text="Review:"
                android:textSize="30dp"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="525px"
                android:id="@+id/List_Review"/>
            <View
                android:layout_width="match_parent"
                android:paddingTop="350dp"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
